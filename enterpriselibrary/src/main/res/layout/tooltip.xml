<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="@dimen/tooltip_arrow_height"
        android:layout_height="@dimen/tooltip_arrow_height"
        android:src="@drawable/arrow_bottom"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/tooltipContentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/tooltip_top_bottom_spacing"
        android:paddingLeft="@dimen/tooltip_left_right_spacing"
        android:paddingRight="@dimen/tooltip_left_right_spacing"
        android:paddingTop="@dimen/tooltip_top_bottom_spacing" />

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="@dimen/tooltip_arrow_height"
        android:layout_height="@dimen/tooltip_arrow_height"
        android:src="@drawable/arrow_top" />

</LinearLayout>